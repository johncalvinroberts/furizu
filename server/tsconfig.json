{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ES2020",
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@/*": ["./server/*"],
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}