{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write .",
    "generate-migration": "drizzle-kit generate",
    "up": "drizzle-kit up",
    "migrate": "tsx src/migrate",
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "yolo": "npx npm-check-updates -u"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "drizzle-orm": "^0.31.2",
    "electric-sql": "^0.11.3",
    "fastify": "^4.27.0",
    "postgres": "^3.4.4",
    "tsx": "^4.15.1"
  },
  "devDependencies": {
    "@types/pg": "^8.11.6",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.22.6",
    "prettier": "^3.3.1",
    "rimraf": "^5.0.7",
    "typescript": "^5.4.5"
  }
}
